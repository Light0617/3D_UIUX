// c:n
sub makepipe(

   for x <- 1..c:n do (
      node:("x" + c:x) -- link -> node:("x" + (c:x + 1)) ::> (
         itemcolor rgb: toint (120.0 * c:x / c:n) 0 0;
         itemdkcolor rgb: toint (120.0 * c:x / c:n) 0 0;
         itemsize 1.0 + 6.0 * c:x / c:n;
      );
//      node:("x" + c:x) -- link -> node:("x" + (c:x + 5)) ::> (
//         itemcolor rgb: toint (40.0 * c:x / c:n) toint (40.0 * c:x / c:n) toint (40.0 * c:x / c:n);
//         itemdkcolor rgb: toint (40.0 * c:x / c:n) toint (40.0 * c:x / c:n) toint (40.0 * c:x / c:n);
//         itemsize 7.0 - 6.0 * c:x / c:n;
//      );
      
      node:("x" + c:x) ::> (
         itemcolor rgb: toint (120.0 * c:x / c:n) toint (120.0 * c:x / c:n) 0;
         nodesphere (3d:0 0 0) sqrt(400.0 * c:x / c:n) 1.0 true;
      );
      
   ) end;

);

//////////////////////////////////////////////////////////////////////////////////////////////////////
./makepipe [( n <- 1500 )];
